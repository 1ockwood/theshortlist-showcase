---
import PlaylistCard from '@components/PlaylistCard.astro';

const { playlists } = Astro.props;
---

<div class="playlist-grid">
  {playlists.map(playlist => (
    <PlaylistCard playlist={playlist.data} />
  ))}
</div>

<style lang="scss">
@use "../styles/utilities" as utils;

.playlist-grid {
  display: grid;
  grid-template-columns: repeat(1, 1fr);
  grid-gap: 1rem;
  padding-top: 1rem;
  padding-bottom: 1rem;

  @media (min-width: utils.$helper-bp-x-small) {
    grid-template-columns: repeat(2, 1fr);
  }

  @media (min-width: utils.$helper-bp-medium) {
    grid-template-columns: repeat(3, 1fr);
  }

  @media (min-width: utils.$helper-bp-large) {
    grid-template-columns: repeat(4, 1fr);
  }
}
</style>
